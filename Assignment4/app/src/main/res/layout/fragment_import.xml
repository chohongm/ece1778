<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:showIn="@layout/activity_main"
        tools:context="in.nishantarora.assignment4.MainActivityFragment">

    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:id="@+id/spinner"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/import_button"/>

    <ImageButton
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/import_button"
            android:src="@drawable/ic_file_download_black_96dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/action_import"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progress_text"
            android:layout_marginBottom="10dp"
            android:id="@+id/progress_bar"
            android:visibility="invisible"/>

    <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/import_button"
            android:layout_marginBottom="50dp"
            android:id="@+id/progress_text"
            android:visibility="invisible"
            android:textAlignment="center"/>

    <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner"
            android:id="@+id/thread_text"
            android:visibility="invisible"
            android:textAlignment="center"/>

</RelativeLayout>